}

sound $EFF_BV_MOUNTAIN_STONE {
        channel         7
        priority        1
        cropos          255


       	file	"RESOURCE\SOUND\EFF\ANIMATION\MOUNTAIN\stone_begin.wav"
}

sound $EFF_BEGIN_MOUNTAIN_HIT {
        channel         8
        priority        1
