#include "Sound\snd_ids.h"
#include "Sound\Scripts\common.inc"

max_panning 4000


sound $EFF_BV_STORM {
        channel         1
        priority        1
        cropos          255

       	file	"RESOURCE\SOUND\EFF\ANIMATION\bv_storm.wav"
}

sound $EFF_BEGIN_TELEPORT {
        channel         2
        priority        1
        cropos          255

       	file	"RESOURCE\SOUND\EFF\ANIMATION\begin_teleport.wav"
}

sound $EFF_BEGIN_GLASS_TUBE {
        channel         3
        priority        1
        cropos          255
